

import pandas as pd
import numpy as np
from sklearn.preprocessing import StandardScaler
from sklearn.cluster import KMeans
from sklearn.metrics import silhouette_score
from sklearn.decomposition import PCA
import matplotlib.pyplot as plt
import os


path = 'retail_store_sales.csv' 
df = pd.read_csv(path, sep=',', engine='python')


print("Shape:", df.shape)
print("\nColumns and dtypes:\n", df.dtypes)
print("\nNulls per column:\n", df.isnull().sum())
print("\nSample rows:\n", df.head(10))


df['Transaction Date'] = pd.to_datetime(df['Transaction Date'], errors='coerce')
df['Price Per Unit'] = pd.to_numeric(df['Price Per Unit'], errors='coerce')
df['Quantity'] = pd.to_numeric(df['Quantity'], errors='coerce')
df['Total Spent'] = pd.to_numeric(df['Total Spent'], errors='coerce')


mask_compute = df['Total Spent'].isnull() & df['Price Per Unit'].notnull() & df['Quantity'].notnull()
df.loc[mask_compute, 'Total Spent'] = df.loc[mask_compute, 'Price Per Unit'] * df.loc[mask_compute, 'Quantity']


mask_price = df['Price Per Unit'].isnull() & df['Total Spent'].notnull() & df['Quantity'].notnull() & (df['Quantity']!=0)
df.loc[mask_price, 'Price Per Unit'] = df.loc[mask_price, 'Total Spent'] / df.loc[mask_price, 'Quantity']

mask_qty = df['Quantity'].isnull() & df['Total Spent'].notnull() & df['Price Per Unit'].notnull() & (df['Price Per Unit']!=0)
df.loc[mask_qty, 'Quantity'] = df.loc[mask_qty, 'Total Spent'] / df.loc[mask_qty, 'Price Per Unit']


numeric_cols = ['Price Per Unit','Quantity','Total Spent']
df[numeric_cols] = df[numeric_cols].fillna(0)

# Clean Discount Applied to boolean
df['Discount Applied'] = df['Discount Applied'].astype(str).str.upper().map({'TRUE':True,'FALSE':False})
df['Discount Applied'] = df['Discount Applied'].fillna(False).astype(bool)


agg = df.groupby('Customer ID').agg(
    total_spent=pd.NamedAgg(column='Total Spent', aggfunc='sum'),
    total_quantity=pd.NamedAgg(column='Quantity', aggfunc='sum'),
    n_transactions=pd.NamedAgg(column='Transaction ID', aggfunc='count'),
    avg_spend=pd.NamedAgg(column='Total Spent', aggfunc=lambda x: x.sum()/x.count() if x.count()>0 else 0),
    discount_rate=pd.NamedAgg(column='Discount Applied', aggfunc=lambda x: x.sum()/x.count() if x.count()>0 else 0)
).reset_index()

print("\nAggregated customers shape:", agg.shape)
print(agg.head())


features = ['total_spent','total_quantity','n_transactions','avg_spend','discount_rate']
X = agg[features].copy()

scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)


inertia = []
K = range(2,11)
for k in K:
    km = KMeans(n_clusters=k, random_state=42, n_init=10)
    km.fit(X_scaled)
    inertia.append(km.inertia_)


sil_scores = []
for k in K:
    km = KMeans(n_clusters=k, random_state=42, n_init=10)
    labels = km.fit_predict(X_scaled)
    sil_scores.append(silhouette_score(X_scaled, labels))

best_k = K[np.argmax(sil_scores)]
print("\nBest k by silhouette:", best_k)


kmeans_final = KMeans(n_clusters=best_k, random_state=42, n_init=10)
agg['cluster'] = kmeans_final.fit_predict(X_scaled)


pca = PCA(n_components=2, random_state=42)
X_pca = pca.fit_transform(X_scaled)
agg['pc1'] = X_pca[:,0]
agg['pc2'] = X_pca[:,1]


output_dir = 'clustering_outputs'
os.makedirs(output_dir, exist_ok=True)
agg.to_csv(os.path.join(output_dir,'customers_agg_clusters.csv'), index=False)


plt.figure(figsize=(6,4))
plt.plot(list(K), inertia, marker='o')
plt.title('Elbow: Inertia vs k')
plt.xlabel('k')
plt.ylabel('Inertia')
plt.tight_layout()
plt.savefig(os.path.join(output_dir,'elbow.png'))
plt.show()

plt.figure(figsize=(6,4))
plt.plot(list(K), sil_scores, marker='o')
plt.title('Silhouette Score vs k')
plt.xlabel('k')
plt.ylabel('Silhouette Score')
plt.tight_layout()
plt.savefig(os.path.join(output_dir,'silhouette.png'))
plt.show()

plt.figure(figsize=(7,6))
# color by cluster
for c in sorted(agg['cluster'].unique()):
    mask = agg['cluster'] == c
    plt.scatter(agg.loc[mask,'pc1'], agg.loc[mask,'pc2'], s=60, label=f'Cluster {c}')
plt.title('PCA 2D view of clusters')
plt.xlabel('PC1')
plt.ylabel('PC2')
plt.legend()
plt.tight_layout()
plt.savefig(os.path.join(output_dir,'pca_clusters.png'))
plt.show()


summary = agg.groupby('cluster')[features].agg(['count','mean','median','std']).round(2)
print("\nCluster summary:\n", summary)

summary.to_csv(os.path.join(output_dir,'cluster_summary.csv'))

print("\nOutputs saved in folder:", output_dir)

